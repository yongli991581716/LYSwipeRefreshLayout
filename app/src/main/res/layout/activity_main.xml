<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/text_nomal_style"
        android:layout_marginTop="@dimen/normal_size"
        android:onClick="normalClick"
        android:text="普通模式" />

    <TextView
        style="@style/text_nomal_style"
        android:layout_marginTop="@dimen/normal_size"
        android:onClick="listClick"
        android:text="列表模式" />


    <TextView
        style="@style/text_nomal_style"
        android:layout_marginTop="@dimen/normal_size"
        android:onClick="normalExtendClick"
        android:visibility="gone"
        android:text="普通可伸缩模式" />

    <TextView
        style="@style/text_nomal_style"
        android:layout_marginTop="@dimen/normal_size"
        android:visibility="gone"
        android:onClick="listExtendClick"
        android:text="列表可伸缩模式" />
</LinearLayout>
